<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.css') }}">
        <!-- style.css -->
        <link rel="stylesheet" type="text/css" href="{{ asset('assets/css/base.css') }}"/>
        <!-- jquery cdn -->
        <script type="text/javascript" src="https://code.jquery.com/jquery-3.4.1.js"></script>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 navbar">

                <a href="{{ path('public.home') }}" class="logo navbar-brand text-white offset-md-2">JNM</a>
                <ul class="nav">
                    <li class="nav-item"><a href="{{ path('public.about') }}" class="nav-link">À propos</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Logement</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Transport</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Activité</a></li>
                    <li class="nav-item"><a href="#" class="nav-link">Contact</a></li>
                    <li class="nav-item"><a href="{{ path('app_login') }}" class="nav-link">Connexion</a></li>
                </ul>
            </div>
        </div>
    </div>

    {% block body %} {% endblock %}

    <!-- bootstrap javascript cdn -->
    <script type="text/javascript" src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
    </body>
</html>
